---
import { getCollection, getEntry, render } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";

// 1. Export getStaticPaths to define all static blog post URLs
export async function getStaticPaths() {
  const blogEntries = await getCollection("blog");

  return blogEntries.map((entry) => ({
    params: {
      slug: entry.id,
    },
  }));
}

// 2. Look up the content entry using the slug from Astro.params
const entry = await getEntry("blog", Astro.params.slug);

// 3. Handle 404 case if the entry is not found
if (!entry) {
  return new Response(null, {
    status: 404,
    statusText: "Not found",
  });
}

// 4. Render the content and extract data
const { Content } = await render(entry);
const formattedDate = entry.data.pubDate.toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});
---

<BaseLayout title={entry.data.title} description={entry.data.description}>
  <Header />

  <main>
    <article class="blog-post">
      <div class="container">
        <header class="post-header">
          <div class="post-meta">
            <span class="category-badge category-{entry.data.category}">
              {entry.data.category}
            </span>
            <time datetime={entry.data.pubDate.toISOString()}>
              {formattedDate}
            </time>
          </div>
          <h1>{entry.data.title}</h1>
          <p class="post-description">{entry.data.description}</p>
          <div class="post-tags">
            {entry.data.tags?.map((tag) => <span class="tag">{tag}</span>)}
          </div>
        </header>

        <div class="post-content">
          <Content />
        </div>
      </div>
    </article>
  </main>

  <Footer />
</BaseLayout>

<style>
  .blog-post {
    padding: 40px 0 80px;
    max-width: 800px;
    margin: 0 auto;
  }

  .post-header {
    text-align: center;
    margin-bottom: 60px;
    padding-bottom: 40px;
    border-bottom: 1px solid var(--border-color);
  }

  .post-meta {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
    margin-bottom: 20px;
    font-size: 0.9rem;
    color: var(--text-color);
  }

  .category-badge {
    background-color: var(--accent-color);
    color: var(--bg-color);
    padding: 4px 12px;
    border-radius: 15px;
    font-weight: 700;
    text-transform: capitalize;
    font-size: 0.8rem;
  }

  .category-tutorials {
    background-color: #3b82f6;
  }

  .category-writings {
    background-color: #10b981;
  }

  .category-library {
    background-color: #f59e0b;
  }

  .post-header h1 {
    font-size: 3rem;
    margin-bottom: 20px;
    line-height: 1.2;
  }

  .post-description {
    font-size: 1.2rem;
    color: var(--text-color);
    font-style: italic;
    margin-bottom: 30px;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .post-tags {
    display: flex;
    justify-content: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .post-tags .tag {
    background-color: var(--card-bg-color);
    border: 1px solid var(--border-color);
    color: var(--text-color);
    padding: 4px 12px;
    border-radius: 15px;
    font-size: 0.85rem;
    font-weight: 600;
  }

  .post-content {
    line-height: 1.8;
    font-size: 1.1rem;
  }

  .post-content :global(h2) {
    font-size: 2rem;
    margin: 40px 0 20px;
    color: var(--heading-color);
  }

  .post-content :global(h3) {
    font-size: 1.5rem;
    margin: 30px 0 15px;
    color: var(--heading-color);
  }

  .post-content :global(p) {
    margin-bottom: 20px;
  }

  .post-content :global(blockquote) {
    border-left: 4px solid var(--accent-color);
    padding-left: 20px;
    margin: 30px 0;
    font-style: italic;
    color: var(--text-color);
    background-color: var(--card-bg-color);
    padding: 20px;
    border-radius: 0 8px 8px 0;
  }

  .post-content :global(code) {
    background-color: var(--card-bg-color);
    padding: 2px 6px;
    border-radius: 4px;
    font-size: 0.9em;
    border: 1px solid var(--border-color);
  }

  .post-content :global(pre) {
    background-color: var(--card-bg-color);
    border: 1px solid var(--border-color);
    border-radius: 8px;
    padding: 20px;
    overflow-x: auto;
    margin: 30px 0;
  }

  .post-content :global(pre code) {
    background: none;
    border: none;
    padding: 0;
  }

  /* Drop cap for first paragraph in blog posts */
  /* Primary: with <hr> */
  .post-content :global(blockquote:first-child + hr + h2 + p)::first-letter ,
 /* Fallback: without <hr> */
 .post-content :global(blockquote:first-child  + h2 + p)::first-letter {
    float: left;
    font-size: 3.8em;
    line-height: 0.85;
    font-weight: bold;
    /* font-style: italic; */
    font-family: "Atkinson Hyperlegible", serif;
    color: var(--accent-color);
    margin-right: 0.01em;
    margin-top: -0.3em;
  }

  /* Mobile: smaller screens */
  @media (max-width: 600px) {
    .post-content :global(blockquote:first-child + hr + h2 + p)::first-letter,
    .post-content :global(blockquote:first-child + h2 + p)::first-letter {
      font-size: 3em; /* ~20â€“25% smaller */
      line-height: 0.9; /* slightly more breathing room */
      margin-right: 0.01em;
      margin-top: -0.3em;
    }
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 2.2rem;
    }

    .post-meta {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>
